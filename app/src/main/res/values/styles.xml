<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#181818</item>
        <item name="colorPrimaryDark">#0c0c0c</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">#141414</item>
        <item name="android:statusBarColor">#0c0c0c</item>
        <item name="fontPath">fonts/coco.ttf</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontPath">fonts/coco.ttf</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontPath">fonts/coco.ttf</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontPath">fonts/coco.ttf</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">20sp</item>
        <item name="fontPath">fonts/coco.ttf</item>
        <item name="android:textColor">#222222</item>
    </style>


</resources>
